<div class="qa-form">
  <h2>Add a question</h2>
  <form role="form">
    <div class="form-group">
      <label>Question</label>
      <input type="text" class="form-control" placeholder="Enter question">
    </div>
    <div class="form-group">
      <label>Answers</label>
      <input type="password" class="form-control" placeholder="Enter answer choice 1">
      <input type="password" class="form-control" placeholder="Enter answer choice 2">
      <input type="password" class="form-control" placeholder="Enter answer choice 3">
      <input type="password" class="form-control" placeholder="Enter answer choice 4">
    </div>
    <button type="submit" class="btn btn-default">Submit question</button>
  </form>
</div>